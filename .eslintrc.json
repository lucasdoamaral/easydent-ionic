{
    "env": {
        "browser": true
    },
    "globals": {
        "angular": true
    },
    // "extends": "eslint:recommended",
    "extends": "angular",
    "rules": {
        "indent": [
            "off",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "angular/controller-name": [
            2,
            "/[A-Z].*Ctrl/"
        ],
        "angular/controller-as": [
            "off"
        ],
        "angular/controller-as-route": [
            "off"
        ],
        "angular/no-service-method": [
            "off"
        ]
    }
}