{
    "env": {
        "browser": true
    },
    
    "globals": {
        "angular": true
    },

    // "extends": "eslint:recommended",
    "extends": "angular",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "angular/controller-name": [2,"/[A-Z].*Ctrl/"]
    }
}